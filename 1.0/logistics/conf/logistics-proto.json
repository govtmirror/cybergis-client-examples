{
	"layers":
	{
		"osm":
		{
			"name":"OSM",
			"classification":"Unclassified",
			"description":"OpenStreetMap is a free, editable map of the whole world.",
			"type":"OSM"
		},
		"ports":
		{
			"name":"Locations",
			"classification":"Unclassififed",
			"description":"This layer contains port locations worldwide.  The contained herein is entirely unclassified.  The data is pulled directly from WFP's GeoNode.",
			"type":"GeoJSON",
			"projection":"EPSG:4326",
			"minZoom":0,
			"maxZoom":18,
			"url":"http://geonode.wfp.org/geoserver/wfs?srsName=EPSG%3A4326&typename=geonode%3Awld_trs_ports_wfp&outputFormat=json&version=1.0.0&service=WFS&request=GetFeature&cql_filter=iso3 IN ('SDN','ETH','KEN','UGA','SOM','SSD','DJI','ERI')",
			"select":true,
			"popup":true,
			"jit":
			[
				{
					"type":"simple",
					"refresh":{"init":true,"focus":false},
					"tasks":
					[
						{"op":"concat","output":"name_search","input":["${name}"," (","${geonameid}",")"]},
						
						{"op":"concat","output":"sovereign","input":["${sov0name}"," (","${sov_a3}",")"]},
						{"op":"concat","output":"location2","input":["${name}",", ","${adm0name}"]},
						{"op":"concat","output":"location3","input":["${name}",", ","${adm0name}"]},
						{"op":"concat","output":"location3","input":["${name}",", ","${adm1name}",", ","${adm0name}"],"where":{"op":"!=","field":"adm1name","value":""}}
					]
				}
			]
		}
	}
}
